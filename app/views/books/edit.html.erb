<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>
 
  <h5>Body</h5>
  <%= f.text_area :body %>
 
  <%= f.submit 'Update Book' %>
  
<% end %>

<div class= "edit-button">
  <div class= "edit-button-show">
    <%= link_to "Show", book_path(@book.id) %>
  </div>
  <div class= "back-button">
  <%= link_to "Back", books_path %>
  </div>
</div>